@page
@model kitap_listeleme_app.Pages.KitapListesi.GuncelleEkleModel

<br />
<h2 class="text-info">@(Model.kitap.Id!=0? "Güncelle":"Oluştur")</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">

        @if (Model.kitap.Id != 0)
        {
            <input type="hidden" asp-for="kitap.Id" />
        }

       
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="kitap.KitapAd"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="kitap.KitapAd" />
            </div>
            <span asp-validation-for="kitap.KitapAd" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="kitap.Yazar"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="kitap.Yazar" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="kitap.ISBN"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="kitap.ISBN" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.kitap.Id!=0?"Güncelle":"Oluştur")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Kitaplara Geri Dön</a>
            </div>
        </div>

    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}